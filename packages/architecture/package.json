{
  "name": "@struktos/architecture",
  "version": "0.1.0-alpha.1",
  "description": "Architecture validation rules and Hexagonal Architecture enforcement utilities",
  "author": "Struktos.js Team <team@struktos.dev>",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage .turbo"
  },
  "keywords": [
    "struktos",
    "architecture",
    "hexagonal",
    "validation",
    "enterprise"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/struktos/struktos-platform.git",
    "directory": "packages/architecture"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
