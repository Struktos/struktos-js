{
  "$schema": "https://json.schemastore.org/tsconfig",

  "_comment": [
    "============================================================================",
    "@struktos/core - TypeScript Configuration",
    "============================================================================",
    "Inherits from tsconfig.base.json and provides core-specific settings.",
    "============================================================================"
  ],

  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {},
    "composite": false,
    "incremental": false,
    "declaration": true,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "vitest.config.ts"]
}
