{
  "name": "@struktos/core",
  "type": "module",
  "version": "1.0.0-alpha.1",
  "description": "Struktos.js Core - Hexagonal Architecture Framework with DDD, CQRS, and Unit of Work patterns",
  "author": "Struktos.js Team <team@struktos.dev>",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./domain": {
      "import": "./dist/domain/index.mjs",
      "require": "./dist/domain/index.js",
      "types": "./dist/domain/index.d.ts"
    },
    "./application": {
      "import": "./dist/application/index.mjs",
      "require": "./dist/application/index.js",
      "types": "./dist/application/index.d.ts"
    },
    "./infrastructure": {
      "import": "./dist/infrastructure/index.mjs",
      "require": "./dist/infrastructure/index.js",
      "types": "./dist/infrastructure/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage .turbo"
  },
  "keywords": [
    "struktos",
    "hexagonal-architecture",
    "ddd",
    "cqrs",
    "unit-of-work",
    "repository-pattern",
    "dependency-injection",
    "domain-events",
    "enterprise",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/struktos/struktos-platform.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/struktos/struktos-platform/issues"
  },
  "homepage": "https://struktos.dev",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
